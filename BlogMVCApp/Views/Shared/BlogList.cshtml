@model IEnumerable<BlogMVCApp.Models.BlogModel>

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <h3>Wow! Such empty.</h3>
    </div>
}
else
{
    foreach (var blog in Model)
    {
        <div class="blog-item">
            <h3 class="page-header">
                @blog.Title
            </h3>
            <p>
                <span class="glyphicon glyphicon-time">
                    @blog.CreationDate
                </span>
            </p>
            <hr />
            <img class="img-responsive" src="http://placehold.it/900x300" alt="" />
            <hr />
            <p>
                @blog.Explanation
            </p>
            @Html.ActionLink("Read all...", "Details", "Blog", new { id = blog.Id }, new { @class = "btn btn-primary" })
        </div>
    }
}


