@model IEnumerable<BlogMVCApp.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Categories</h2>
<hr />

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>

@if (TempData["Category"] != null)
{
    var category = (BlogMVCApp.Models.Category)TempData["Category"];
    <div class="alert alert-success" role="alert">
        <strong>
            @category.CategoryName
        </strong> Recorded <span class="glyphicon glyphicon-edit"></span>
    </div>
}

@if (TempData["CategoryCreate"] != null)
{
    var category = (BlogMVCApp.Models.Category)TempData["CategoryCreate"];
    <div class="alert alert-success" role="alert">
        <strong>
            @category.CategoryName
        </strong> Added <span class="glyphicon glyphicon-ok"></span>
    </div>
}

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogCount)
        </th>
        <th style="width:17rem;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @item.BlogCount
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
