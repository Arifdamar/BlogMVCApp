@model IEnumerable<BlogMVCApp.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>All Blogs</h2>
<hr />

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    <hr />
</p>

@if (TempData["Blog"] != null)
{
    var blog = (BlogMVCApp.Models.Blog)TempData["Blog"];
    <div class="alert alert-success" role="alert">
        <strong>
            @blog.Title
        </strong> Updated <span class="glyphicon glyphicon-edit"></span>
    </div>
}

@if (TempData["BlogCreate"] != null)
{
    var blogCreated = (BlogMVCApp.Models.Blog)TempData["BlogCreate"];
    <div class="alert alert-success" role="alert">
        <strong>
            @blogCreated.Title
        </strong> Added <span class="glyphicon glyphicon-ok"></span>
    </div>
}

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Explanation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsConfirmed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsHomePage)
        </th>
        <th style="width:17rem"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Explanation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @if (item.IsConfirmed)
                {
                    <label class="label label-success">Confirmed</label>
                }
                else
                {
                    <label class="label label-danger">Not Confirmed</label>
                }
            </td>
            <td>
                @if (item.IsHomePage)
                {
                    <label class="label label-success">In Homepage</label>
                }
                else
                {
                    <label class="label label-danger">Not in Homepage</label>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
